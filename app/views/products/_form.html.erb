<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user %>
    <%= form.text_field :user, id: :product_user %>
  </div>

  <div class="field">
    <%= form.label :Title %>
    <%= form.text_field :name, id: :product_name %>
  </div>


  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.text_field :images, id: :product_images %>
  </div>

  <div class="field">
    <%= form.label :video %>
    <%= form.text_field :video, id: :product_video %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.collection_select :id, Category.order(:name), :id,:name, include_blank: true %>
  </div>


  <%= form.label :funding %>
  <%= form.check_box :funding, id: :product_funding %>

  <div id="fundingForms">
    <div class="field">
      <%= form.label :goal_amount %>
      <%= form.text_field :goal_amount, id: :product_goal_amount %>
    </div>
  
    <div class="field">
      <%= form.label :due_date %>
      <%= form.datetime_select :due_date, id: :product_due_date %>
    </div>
  </div>
  
  <script type="text/javascript">
    var checkBox = document.getElementById('product_funding');
    var fundingForms = document.getElementById('fundingForms');
    checkBox.checked = true;
    checkBox.onchange = function() {
      if(this.checked)
      {
        fundingForms.style['visibility'] = 'visible';
      }
      else if(!this.checked)
      {
        fundingForms.style['visibility'] = 'hidden';
      }
    }
  </script>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
