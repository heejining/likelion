                  <a class="nav-link button" href="/myaccount"> My Account </a> 
                  <a class="nav-link button" <%= link_to 'Sign out',  destroy_user_session_path, method: 'delete' %> </a> 
                  <a class="nav-link button" href="/categories/5" id="categories">Categories</a>
              <% else %>
                  <a class="nav-link button" <%= link_to 'Sign in', new_user_session_path %></a>  
              <% end %>
                <a class="nav-link button" href="/contact_email">Contact Us</a>
              </div>
            </div>
          </div>
         </nav>
    <%= yield %>
